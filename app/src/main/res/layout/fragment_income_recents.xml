<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentMainRecentLogs"
    android:background="@drawable/background_normal_fade"
    tools:context=".Fragments.IncomeRecentsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SearchView
                android:id="@+id/socialNumberSearchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:inputType="number"
                android:iconifiedByDefault="false"
                android:background="@drawable/background_normal_fade"
                android:queryHint="Buscar por Num. CÃ©dula" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recentListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/background_normal_fade"
        android:padding="7dp">

        <TextView
            android:id="@+id/textResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mostrando 30 Logs recientes."/>

    </LinearLayout>

</FrameLayout>